{
  "name": "zappro-saas",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "PORT=3001 next dev",
    "dev:turbo": "next dev --turbo",
    "dev:wsl": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix/apps/saas && PORT=3001 npm run dev\"",
    "build": "npm run typecheck && npm run test:smoke && next build",
    "start": "node .next/standalone/apps/saas/server.js",
    "start:wsl": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix/apps/saas && PORT=3001 npm run start\"",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "clean": "bash -lc 'rm -rf .next'",
    "test:e2e": "playwright test",
    "test:sprite": "node scripts/sprite.mjs",
    "test:smoke": "node scripts/sprite.mjs",
    "validate:wsl": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix/apps/saas && npm run lint && npm run typecheck && npm run build\"",
    "test:unit": "vitest --run __tests__",
    "supa:init": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix && npx supabase init\"",
    "supa:start": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix && npx supabase start\"",
    "supa:reset": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix && npx supabase db reset\"",
    "docker:build": "wsl bash -lc \"cd /mnt/d/projetos/zappro-ajudatec-wilrefrimix/zappro-ajudatec-wilrefrimix/apps/saas && docker build -t zappro-saas .\"",
    "docker:run": "wsl bash -lc \"docker run --rm -e PORT=3001 -p 3001:3001 zappro-saas\"",
    "scan:trivy": "wsl bash -lc \"trivy image --severity HIGH,CRITICAL zappro-saas || true\"",
    "audit:docker": "node scripts/audit-logs.mjs",
    "compliance:github": "node scripts/github-compliance.mjs",
    "provision:supabase": "node scripts/provision-supabase.mjs",
    "test:smoke:postdeploy": "node scripts/postdeploy-smoke.mjs"
  },
  "dependencies": {
    "next": "^15.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@supabase/supabase-js": "^2.47.10",
    "stripe": "^16.6.0",
    "@stripe/stripe-js": "^4.8.0"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.2",
    "tailwindcss": "^3.4.13",
    "postcss": "^8.4.41",
    "autoprefixer": "^10.4.20",
    "@playwright/test": "^1.47.0",
    "@axe-core/playwright": "^4.7.0",
    "axe-core": "^4.10.0",
    "vitest": "^4.0.13",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0",
    "@testing-library/jest-dom": "^6.4.2"
  }
}
